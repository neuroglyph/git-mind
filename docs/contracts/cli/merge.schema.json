{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/neuroglyph/git-mind/docs/contracts/cli/merge.schema.json",
  "title": "git-mind merge --json",
  "description": "Merge result from `git mind merge --json`",
  "type": "object",
  "required": ["schemaVersion", "command", "nodes", "edges", "repoName"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": { "type": "integer", "const": 1 },
    "command": { "type": "string", "const": "merge" },
    "nodes": { "type": "integer", "minimum": 0 },
    "edges": { "type": "integer", "minimum": 0 },
    "repoName": { "type": "string", "minLength": 1 },
    "dryRun": { "type": "boolean" }
  }
}
