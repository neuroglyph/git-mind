{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/flyingrobots/git-mind/docs/contracts/cli/export-data.schema.json",
  "title": "git-mind export --json (stdout)",
  "description": "Graph data export from `git mind export --json` (stdout mode)",
  "type": "object",
  "required": [
    "schemaVersion",
    "command",
    "version",
    "nodes",
    "edges"
  ],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "const": 1
    },
    "command": {
      "type": "string",
      "const": "export"
    },
    "version": {
      "type": "integer",
      "const": 1
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "properties": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "source",
          "target",
          "type"
        ],
        "properties": {
          "source": {
            "type": "string",
            "minLength": 1
          },
          "target": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "rationale": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "resolvedContext": {
      "type": "object",
      "description": "Resolved read context for this operation",
      "properties": {
        "asOf": {
          "type": "string"
        },
        "resolvedTick": {
          "type": [
            "integer",
            "null"
          ]
        },
        "observer": {
          "type": [
            "string",
            "null"
          ]
        },
        "trustPolicy": {
          "type": "string"
        },
        "extensionLock": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}
