#!/usr/bin/env bash
# Wrapper to choose between quick and full CI checks

# Use GITMIND_PUSH_MODE environment variable or default to "full"
# Options: quick, full
MODE="${GITMIND_PUSH_MODE:-full}"

case "$MODE" in
    quick)
        echo "⚡ Using quick mode (set GITMIND_PUSH_MODE=full for complete CI)"
        exec "$(dirname "$0")/pre-push-quick" "$@"
        ;;
    full)
        # Default - run everything since all branches become PRs
        exec "$(dirname "$0")/pre-push-full" "$@"
        ;;
    *)
        echo "❌ Unknown GITMIND_PUSH_MODE: $MODE (use: quick or full)"
        exit 1
        ;;
esac