FROM ubuntu:22.04

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    libgit2-dev \
    libgit2-1.1 \
    pkg-config \
    valgrind \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Copy source files
COPY . .

# Ensure we can detect Docker environment
RUN touch /.dockerenv

# Default command
CMD ["/bin/bash"]