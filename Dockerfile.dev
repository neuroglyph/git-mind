FROM alpine:latest

# Install C development tools
RUN apk add --no-cache \
    build-base \
    git \
    bash \
    valgrind \
    gdb \
    clang \
    clang-analyzer \
    openssl-dev

# Set working directory
WORKDIR /workspace

# Default command
CMD ["bash"]